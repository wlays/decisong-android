<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- focused -->
    <item android:state_focused="true"><shape android:shape="rectangle">
            <gradient android:angle="270" android:centerColor="#226078" android:endColor="#024c68" android:startColor="#0776a0" />
        </shape></item>
    <!-- pressed -->
    <item android:state_pressed="true"><shape android:shape="rectangle">
            <gradient android:angle="270" android:centerColor="#226078" android:endColor="#024c68" android:startColor="#0776a0" />
        </shape></item>
    <!-- selected -->
    <item android:state_selected="true"><shape android:shape="rectangle">
            <gradient android:angle="270" android:centerColor="#226078" android:endColor="#024c68" android:startColor="#0776a0" />
        </shape></item>
    <!-- default -->
    <item><shape android:shape="rectangle">
            <gradient android:angle="270" android:centerColor="#226078" android:endColor="#0776a0" android:startColor="#024c68" />
        </shape></item>

</selector>