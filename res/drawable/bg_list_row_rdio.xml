<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- focused -->
    <item android:state_focused="true"><shape android:shape="rectangle">
            <gradient android:angle="270" android:endColor="#FF2B55A8" android:startColor="#FF2483B2" />
        </shape></item>
    <!-- pressed -->
    <item android:state_pressed="true"><shape android:shape="rectangle">
            <gradient android:angle="270" android:endColor="#FF2B55A8" android:startColor="#FF2483B2" />
        </shape></item>
    <!-- selected -->
    <item android:state_selected="true"><shape android:shape="rectangle">
            <gradient android:angle="270" android:endColor="#FF2B55A8" android:startColor="#FF2483B2" />
        </shape></item>
    <!-- default -->
    <item><shape android:shape="rectangle">
            <gradient android:angle="270" android:endColor="#FF2483B2" android:startColor="#FF2B55A8" />
        </shape></item>

</selector>